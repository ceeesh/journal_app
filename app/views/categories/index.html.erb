<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover">

  <thead>
    <tr>
      <% @categories.each do |category| %>
      <th><%=link_to category.title, category, class:"text-dark text-decoration-none" %></th>
     
      <% end %>
    </tr>
  </thead>
  <tbody>

  <tr>
   <% @tasks.each do |task|%>
    <td><%=link_to task.title, task %>  </td>
  <% end %>
  </tr>
   
  </tbody>
</table>




